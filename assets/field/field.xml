<scene>

  <!-- Camera -->
  <camera type="pinhole">
    <lookat>
      <point3 name="origin" value="0 3 15"/>
      <point3 name="target" value="0 3 0"/>
      <vector3 name="up" value="0 1 0"/>
    </lookat>

    <film>
      <int name="width" value="360"/>
      <int name="height" value="240"/>
      <float name="diagonal" value="43.2666153056" unit="mm"/>
      <string name="filename" value="output.ppm"/>
    </film>

    <float name="lens_radius" value="50" unit="mm"/>
    <float name="fov" value="45" unit="degree"/>
    <float name="focus_distance" value="250" unit="m"/>
  </camera>

  <!-- Lights -->
  <light type="area" id="light0">
    <rgb name="emission" value="7 7 7"/>
  </light>

  <light type="infinite" id="light1">
    <string name="filename" value="infinite.hdr"/>
  </light>

  <!-- Materials -->
  <material type="matte" id="white">
    <rgb name="emission" value="0 0 0"/>
    <rgb name="reflectance" value="0.75 0.75 0.75"/>
  </material>

  <material type="matte" id="red">
    <rgb name="emission" value="0 0 0"/>
    <rgb name="reflectance" value="0.75 0.50 0.50"/>
  </material>

  <material type="metal" id="metal">
    <rgb name="absorption" value="10 10 10"/>
    <float name="ior" value="1.1"/>
    <float name="roughness_u" value="0.5"/>
    <float name="roughness_v" value="0.5"/>
  </material>

  <material type="plastic" id="plastic">
    <rgb name="reflectance" value="0.8 0.2 0.2"/>
    <rgb name="specular" value="0.8 0.2 0.2"/>
    <float name="roughness" value="0.25"/>
  </material>

  <!-- Shapes -->
  <shape type="obj" id="field">
    <string name="filename" value="field.obj"/>
    <reference name="material" value="white"/>
  </shape>

  <shape type="obj" id="light1">
    <string name="filename" value="field_light1.obj"/>
    <reference name="light" value="light0"/>
  </shape>

  <shape type="sphere" id="s">
    <float name="radius" value="3.0"/>
    <point3 name="position" value="0 3 0"/>
    <reference name="material" value="plastic"/>
  </shape>

</scene>
