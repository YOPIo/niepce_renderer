<scene>

  <camera type="pinhole">
    <!-- Camera transformation  -->
    <lookat>
      <point3  name="origin" value="50 50 250"/>
      <point3  name="target" value="50 50 50"/>
      <vector3 name="up" value="0 1 0"/>
    </lookat>
    <film>
      <!-- Resolution -->
      <int name="width"  value="360"/>
      <int name="height" value="240"/>
      <!-- Film size -->
      <float name="diagonal" value="43.2666153056" unit="mm"/>
      <string name="filename" value="output.ppm"/>
    </film>
    <!-- Pinhole camera parameters -->
    <float name="lens_radius" value="50" unit="mm"/>
    <float name="fov" value="75" unit="degree"/>
    <float name="focus_distance" value="250" unit="m"/>
  </camera>

  <!-- Lights -->
  <light type="infinite" id="infinite">
    <string name="filename" value="env.hdr"/>
  </light>

  <light type="area" id="area_light">
    <rgb name="emission" value="5 4.15 3"/>
  </light>

  <!-- Textures -->
  <texture id="texture0">
    <string name="filename" value="icon.png"/>
  </texture>

  <!-- Materials -->
  <material type="matte" id="matte">
    <rgb name="emission" value="0 0 0"/>
    <rgb name="reflectance" value="0.75 0.75 0.75"/>
  </material>

  <material type="matte" id="tex_matte">
    <rgb name="emission" value="0 0 0"/>
    <reference name="reflectance" value="texture0"/>
  </material>

  <material type="matte" id="light">
    <rgb name="emission" value="12 12 12"/>
    <rgb name="reflectance" value="0 0 0"/>
  </material>

  <material type="matte" id="red">
    <rgb name="emission" value="0 0 0 "/>
    <rgb name="reflectance" value="0.75 0.25 0.25"/>
  </material>

  <material type="matte" id="green">
    <rgb name="emission" value="0 0 0 "/>
    <rgb name="reflectance" value="0.25 0.75 0.25"/>
  </material>

  <!--
  <material type="metal" id="metal">
    <rgb name="reflectance" value="0.7 0.35 0.7"/>
    <float name="roughness_u" value="0.5"/>
    <float name="roughness_v" value="0.5"/>
    <float name="ior" value="1.5"/>
  </material>
  -->

  <!-- Shapes -->
  <!--
  <shape type="obj">
    <string name="filename" value="rubiks_cube.obj"/>
    <reference name="material" value="matte"/>
  </shape>
  -->

  <shape type="obj" id="body">
    <string name="filename" value="cornellbox.obj"/>
    <reference name="material" value="matte"/>
  </shape>

  <shape type="obj" id="front">
    <string name="filename" value="cornellbox_front.obj"/>
    <reference name="material" value="tex_matte"/>
  </shape>

  <shape type="obj" id="light">
    <string name="filename" value="cornellbox_light.obj"/>
    <reference name="light" value="area_light"/>
  </shape>

  <shape type="obj" id="right">
    <string name="filename" value="cornellbox_right.obj"/>
    <reference name="material" value="red"/>
  </shape>

  <shape type="obj" id="left">
    <string name="filename" value="cornellbox_left.obj"/>
    <reference name="material" value="green"/>
  </shape>

</scene>
